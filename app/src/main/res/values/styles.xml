        <item name="colorPrimary">@color/colorPrimaryMy</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMy</item>
        <item name="colorAccent">@color/colorAccentMy</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>
